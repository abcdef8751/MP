{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nev",
  "version": "0.1.0",
  "identifier": "com.rp.nev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "nev",
        "width": 1476,
        "height": 923
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: asset://localhost"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
